# Environment variables for SiteSage backend

# Database
DATABASE_URL=postgresql://sitesage:sitesage@db:5432/sitesage

# OpenAI API (optional - will use fallback if not provided)
OPENAI_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-3.5-turbo

# Application
APP_NAME=SiteSage
APP_VERSION=1.0.0
DEBUG=False

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
